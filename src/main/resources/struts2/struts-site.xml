        <action name="rename" class="com.ewcms.web.action.site.template.TemplateAction" method="renameTemplate"/>	
        <action name="del" class="com.ewcms.web.action.site.template.TemplateAction" method="delTemplate"/>	
        <action name="addFolder" class="com.ewcms.web.action.site.template.TemplateAction" method="addFolder"/> 
        <action name="moveto" class="com.ewcms.web.action.site.template.TemplateAction" method="movetoTemplate"/>
        <action name="urltoid" class="com.ewcms.web.action.site.template.TemplateAction" method="urltoID"/>
