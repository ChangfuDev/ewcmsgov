	</package>
	
	<package name="site.template"  extends="struts-default" namespace="/site/template"> 	
	    <action name="index">
			<result>/WEB-INF/page/site/template/index.jsp</result>
		</action>
        <action name="import" class="com.ewcms.web.action.site.template.TemplateAction" method="importTemplate">
			 <interceptor-ref name="fileUpload">
				<param name="allowedTypes">text/htm,text/html,application/zip,application/x-zip-compressed</param>
			</interceptor-ref> 
			<interceptor-ref name="defaultStack"/>
			
            <result name="input">/WEB-INF/page/site/template/import.jsp</result>
        </action>
        <action name="delete" class="com.ewcms.web.action.site.template.TemplateAction" method="delete"/>
        <action name="query" class="com.ewcms.web.action.site.template.TemplateQueryAction" method="query"/>
