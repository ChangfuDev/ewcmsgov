		</action>
		<action name="editSite" class="com.ewcms.web.action.site.organ.OrganAction" method="editOrgan">
			<result name="input">/WEB-INF/page/site/organ/site.jsp</result>
		</action>		
		<action name="editIntroduce" class="com.ewcms.web.action.site.organ.OrganAction" method="editOrgan">
			<result name="input">/WEB-INF/page/site/organ/introduce.jsp</result>
