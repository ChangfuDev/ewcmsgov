			<result name="input">/WEB-INF/page/site/template/info.jsp</result>
		</action>	
		<action name="saveContent" class="com.ewcms.web.action.site.template.TemplateAction" method="saveContent">
			<result name="input">/WEB-INF/page/site/template/content.jsp</result>
		</action>		               	
	</package>
	
    <package name="site.template.source"  extends="struts-default" namespace="/site/template/source">
        <action name="index">
            <result>/WEB-INF/page/site/template/source/index.jsp</result>
        </action>
        <action name="delete" class="com.ewcms.web.action.site.template.SourceAction" method="delete"/>
        <action name="query" class="com.ewcms.web.action.site.template.SourceQueryAction" method="query"/>
        <action name="input" class="com.ewcms.web.action.site.template.SourceAction" method="input">
            <result name="input">/WEB-INF/page/site/channel/sourceedit.jsp</result>
