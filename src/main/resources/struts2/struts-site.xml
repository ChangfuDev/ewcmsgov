	<package name="site.setup"  extends="struts-default" namespace="/site/setup"> 	
		<action name="tree" class="com.ewcms.web.action.site.setup.SetupAction" method="siteTree"/>
		<action name="add" class="com.ewcms.web.action.site.setup.SetupAction" method="addSite"/>
