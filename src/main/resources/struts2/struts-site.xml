			<result>/WEB-INF/page/site/template/edit.jsp</result>
		</action>
		<action name="editInfo" class="com.ewcms.web.action.site.template.TemplateAction" method="editTemplate">
			<result name="input">/WEB-INF/page/site/template/info.jsp</result>
		</action>
		<action name="editContent" class="com.ewcms.web.action.site.template.TemplateAction" method="editTemplate">
			<result name="input">/WEB-INF/page/site/template/content.jsp</result>
		</action>
